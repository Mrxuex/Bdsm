<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x50"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/backbtnlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/x18"
        android:paddingRight="@dimen/x10"
        android:paddingTop="@dimen/x10"
        android:paddingBottom="@dimen/x10"
        android:clickable="false"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:src="@mipmap/title_back"
        android:visibility="gone"
        />


    <TextView
        android:id="@+id/toptitleText"
        style="@style/title_text_style"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/size_16"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/rightlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/x10"
        android:paddingRight="@dimen/x18"
        android:paddingTop="@dimen/x10"
        android:layout_centerVertical="true"
        android:paddingBottom="@dimen/x10"
        android:clickable="false"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:focusable="false"
        android:layout_alignParentRight="true"
        android:textColor="@color/color_ffff5b5b"
        android:textSize="@dimen/size_14" />


    <View
        style="@style/AppTheme.Divider.Line.Vertical"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
