<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">


    <include
        android:id="@+id/top_title"
        layout="@layout/top_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        >


        <com.example.zimuquan.circleofletters.ui.view.circleimageview.CircularImage
            android:id="@+id/user_img"
            android:layout_width="@dimen/user_img"
            android:layout_height="@dimen/user_img"
           android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:src="@mipmap/dating_chose_mas_sel" />

        <RelativeLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_img"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >

            <TextView
                android:id="@+id/text_nichen"
                android:layout_width="55dp"
                android:layout_height="20dp"
                android:text="昵称"
                android:textColor="#BBA175"
                android:textSize="13sp" />

            <LinearLayout
                android:id="@+id/linear_nichne"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/text_nichen"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/my_cichen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="王小二"
                    android:textColor="#ff535353"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/linear_nichne"
                android:src="@mipmap/dating_pull_down_arrow"
                android:visibility="invisible"/>
        </RelativeLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/linear1"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="33dp"
            android:layout_marginTop="15dp"
            android:background="@color/color_ffff5b5b" />


        <RelativeLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view1"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >

            <TextView
                android:id="@+id/text_birthday"
                android:layout_width="55dp"
                android:layout_height="20dp"
                android:text="出生日期"
                android:textColor="#BBA175"
                android:textSize="13sp" />

            <LinearLayout
                android:id="@+id/linear_birthady"
                android:layout_width="226dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/text_birthday"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/my_birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="请选择你的出生日期"
                    android:textColor="#ff535353"
                    android:textSize="12sp" />


            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/linear_birthady"
                android:src="@mipmap/dating_pull_down_arrow" />
        </RelativeLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/linear2"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="33dp"
            android:layout_marginTop="15dp"
            android:background="@color/color_ffff5b5b" />

        <RelativeLayout
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view2"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >

            <TextView
                android:id="@+id/text_sex"
                android:layout_width="55dp"
                android:layout_height="20dp"
                android:text="性别"
                android:textColor="#BBA175"
                android:textSize="13sp" />

            <LinearLayout
                android:id="@+id/linear_sex"
                android:layout_width="226dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/text_sex"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/my_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="请选择你的性别"
                    android:textColor="#ff535353"
                    android:textSize="12sp" />


            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/linear_sex"
                android:src="@mipmap/dating_pull_down_arrow" />

        </RelativeLayout>

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/linear3"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="33dp"
            android:layout_marginTop="15dp"
            android:background="@color/color_ffff5b5b" />

        <RelativeLayout
            android:id="@+id/linear4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view3"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >

            <TextView
                android:id="@+id/text_city"
                android:layout_width="55dp"
                android:layout_height="20dp"
                android:text="城市"
                android:textColor="#BBA175"
                android:textSize="13sp" />

            <LinearLayout
                android:id="@+id/linear_city"
                android:layout_width="226dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/text_city"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/my_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="请选择你的城市"
                    android:textColor="#ff535353"
                    android:textSize="12sp" />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/linear_city"
                android:src="@mipmap/dating_pull_down_arrow" />
        </RelativeLayout>


        <!--以上-->
        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/linear4"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="33dp"
            android:layout_marginTop="15dp"
            android:background="@color/color_ffff5b5b" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view4"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/registered_ok"
                android:layout_width="263dp"
                android:layout_height="35dp"
                android:layout_marginTop="113dp"
                android:background="@mipmap/dating_login_sure_btn"
                android:gravity="center"
                android:text="@string/edit_data_okdata"
                android:textColor="@color/white" />
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>